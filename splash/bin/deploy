#!/usr/bin/env bash

pushd `pwd`> /dev/null # store current dir
cd `dirname "$0"` # cd to script path

echo "--- loading secrets..."

cd ..
../../bin/blackbox/postdeploy
set -a && source .env && set +a

echo "--- deploying..."

cd ansible

ansible-playbook \
  -i inventory \
  playbooks/deploy.yml

pushd > /dev/null
