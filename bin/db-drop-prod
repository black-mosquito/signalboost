#!/usr/bin/env bash

pushd `pwd` # store current dir
cd `dirname "$0"` # cd to script path
cd ..

if [ -z $DATABASE_URL ] ||
[ "$DATABASE_URL" == "postgres://localhost:5432/signal_boost_test" ] ||
[ "$DATABASE_URL" == "postgres://localhost:5432/signal_boost_development" ];then
  export DATABASE_URL="postgres://localhost:5432/signal_boost_production"
fi

echo "----- dropping production database..."
npx sequelize db:drop --env production

popd # return to original dir
