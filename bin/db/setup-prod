#!/usr/bin/env bash

pushd `pwd` # store current dir
cd `dirname "$0"` # cd to script path
cd ../..

if [ -z $DATABASE_URL ] || [ "$DATABASE_URL" == "postgres://localhost:5432/signal_boost_test" ];then
  export DATABASE_URL="postgres://localhost:5432/signal_boost_production"
fi

echo "----- creating prod databases..."
NODE_ENV='production' npx sequelize db:create --env production

echo "----- running prod migrations..."
NODE_ENV='production' npx sequelize db:migrate --env production

echo "----- running prod seeds..."
NODE_ENV='production' npx sequelize db:seed:all --env production

popd # return to original dir
