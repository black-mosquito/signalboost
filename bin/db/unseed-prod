#!/usr/bin/env bash

pushd `pwd` # store current dir
cd `dirname "$0"` # cd to script path
cd ../..

if [ -z $DATABASE_URL ] || [ "$DATABASE_URL" == "postgres://localhost:5432/signal_boost_test" ];then
  export DATABASE_URL="postgres://localhost:5432/signal_boost_production"
fi

echo "----- unseeding production db..."
npx sequelize db:seed:undo:all --env production

popd # return to original dir
