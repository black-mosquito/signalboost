#!/usr/bin/env bash

pushd `pwd` # store current dir
cd `dirname "$0"` # cd to script path
cd ../..

sleep 2

if [ "$NODE_ENV" = "development" ];then
  echo "----- running development migrations..."
  npx sequelize db:migrate:undo --env development

  echo "----- running test migrations..."
  npx sequelize db:migrate:undo --env test
else
  echo "----- running production migrations..."
  npx sequelize db:migrate:undo --env production
fi

popd # return to original dir
