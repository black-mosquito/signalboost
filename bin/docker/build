#!/usr/bin/env bash

pushd `pwd` # store current dir
cd `dirname "$0"` # cd to script path
cd ../..

version=$1

if [ -z $version ];then
  echo "--- ERROR: you did not supply a version tag"
  echo "--- USAGE: ./bin/docker/build 0.0.2"
  exit 1
fi

docker build -f dispatcher.dockerfile -t signalboost:${version} .

popd
