#!/usr/bin/env bash

pushd `pwd` # store current dir
cd `dirname "$0"` # cd to script path
cd ../..

version=$1

# if [ -z $version ];then
#   echo "--- ERROR: you did not supply a version tag"
#   echo "--- USAGE: ./bin/docker/build 0.0.2"
#   exit 1
# fi

docker run \
       -it \
       -v "$(pwd)/app":/app \
       -v "$(pwd)/package.json":/package.json \
       -v "$(pwd)/node_modules":/node_modules \
       -v "$(pwd)/yarn.lock":/yarn.lock \
       --env-file .env \
       -e CHANNEL_PHONE_NUMBER=+19197366224 \
       -e NODE_ENV=development \
       signalboost:0.0.1

popd
