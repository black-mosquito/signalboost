#!/usr/bin/env bash

pushd `pwd` # store current dir
cd `dirname "$0"` # cd to script path
cd ..

if [ "$NODE_ENV" = "production" ];then
  echo '---- ERROR: not permissible to run ./bin/db-migrate-dev on prod!'
  exit 1
fi

url="postgres://localhost:5432/signal_blaster_test"

echo "----- dropping development database..."
DATABASE_URL=${url} npx sequelize db:drop --env development

echo "----- dropping test database..."
DATABASE_URL=${url} npx sequelize db:drop --env test

unset DATABASE_URL

popd # return to original dir
