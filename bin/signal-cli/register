#!/usr/bin/env bash

cd `dirname "$0"` # cd to script path
cd ../..

if [ -z $CHANNEL_PHONE_NUMBER ];then
  echo "--- ERROR: no CHANNEL_PHONE_NUMBER found. try \`\$ source .env\`"
  exit 1
fi

echo "--- sending verification code to ${CHANNEL_PHONE_NUMBER}"

signal-cli -u $CHANNEL_PHONE_NUMBER register
