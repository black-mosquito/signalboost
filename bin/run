#!/usr/bin/env bash

pushd `pwd` # save cwd
cd `dirname "$0"` # cd to script path
cd ..

./bin/blackbox/decrypt_all_files

if [ $1 == "--dev" ];then
  echo "--- running signal-boost in DEVELOPMENT mode"
  NODE_ENV=development docker-compose -f docker-compose-dev.yml up
else
  echo "--- running signal-boost in PRODUCTION mode"
  docker-compose up
fi

popd # return to original cwd
