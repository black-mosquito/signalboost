#!/usr/bin/env bash

rm /var/run/signald/signald.sock

v_flag=""

if [[ "$SIGNALD_VERBOSE_LOG" == "1" ]]; then
  v_flag="-v"
fi

export JAVA_OPTS=""

if [[ "$SIGNALBOOST_ENV" == "production" ]]; then
  export JAVA_OPTS="-Ddd.profiling.enabled=true -javaagent:/var/lib/dd/dd-java-agent.jar"
fi

signald ${v_flag} -d /var/lib/signald